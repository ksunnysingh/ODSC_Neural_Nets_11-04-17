{
    "name": "Python 3 with Jupyter",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",
    "extensions": [
      "ms-python.python",
      "ms-toolsai.jupyter"
    ],
    "postCreateCommand": "pip install jupyter numpy scipy pandas openpyxl xlrd matplotlib seaborn scikit-learn",
    "settings": {
      "python.pythonPath": "/usr/local/bin/python"
    },
    "forwardPorts": [8888],
    "remoteUser": "vscode",
